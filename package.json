{
	"name": "vale-linter-redux",
	"version": "0.2.0",
	"description": "Vale integration plugin",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production && npm run css:build",
		"css:build": "sass src/styles/main.scss styles.css",
		"css:watch": "sass --watch src/styles/main.scss styles.css",
		"version": "node version-bump.mjs",
		"fmt": "prettier --write .",
		"lint": "eslint ."
	},
	"keywords": [
		"obsidian",
		"vale",
		"linter",
		"prose",
		"grammar"
	],
	"authors": [
		"intothebeans",
		"Chris Chinchilla"
	],
	"license": "MIT",
	"devDependencies": {
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "6.38.6",
		"@eslint/js": "9.30.1",
		"@types/node": "^24",
		"esbuild": "0.25.5",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-obsidianmd": "0.1.9",
		"eslint-plugin-prettier": "^5.5.5",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"prettier": "^3.8.1",
		"sass": "^1.97.3",
		"tslib": "2.4.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "8.35.1"
	},
	"dependencies": {
		"obsidian": "1.11"
	}
}
